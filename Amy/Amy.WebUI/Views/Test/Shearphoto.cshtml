
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset=utf-8 />
    <meta name="renderer" content="webkit" />
    <meta http-equiv="X-UA-Compatible" content="IE=8,9,10">
    <title>ShearPhoto2.3正式版_支持HTML5头像截取工具_JS截图_切图插件_数码照</title>

    <link href="~/Content/shearphoto/layer/skin/layer.css" rel="stylesheet" />
    <link href="/content/shearphoto/css/ShearPhoto.css" rel="stylesheet" type="text/css" media="all"><!--CSS文件，有点废话-->
    <script src="~/Content/test/js/jquery-1.9.1.min.js"></script>
    
</head>
<body>
    <h2>Test</h2>

    <table class="mtable" style="height: auto;width:75%; margin: 0 auto;">
        <tr>
            <td>专栏头像：</td>
            <td>
                <div style="width:600px;float: left;position:relative;">
                    <img class="zlhImg" style="float: left; border: 3px solid #007BD9;margin-right:15px;" src="http://www.wukongshuo.com/images/shead.jpg.120x120.jpg" width="120" height="120" />
                    <p style="">要求清晰、健康、代表品牌形象<br>请勿使用二维码，最大2M，200X200像素</p>
                    <input id="uploadurl" name="ColumnHeadImg" type="hidden" value="@(ViewBag.HeadImg)" />
                    <input type="button" id="openUpload" style="background: url(/webplugins/shearphoto/shearphoto_common/images/uploadBtn.png) no-repeat; width: 125px; height: 35px;border:none;border-radius:5px;position:absolute;bottom:0; " />
                </div>
            </td>
        </tr>



        <tr>
            <td></td>
            <td>

                <button class="easyui-linkbutton c1" data-option="size:'large'" id="submitBtn" style="padding:5px 25px;">提交</button>
            </td>
        </tr>
    </table>

    <div class="row mt10 zlHimg" style="display:none;margin:10px;">
        <div class="pal ml10">
            <div id="shearphoto_loading">程序加载中......</div>
            <div id="shearphoto_main">
                <!--primary范围开始-->
                <div class="primary">
                    <!--main范围开始-->
                    <div id="main">
                        <div class="point">
                        </div>
                        <div id="SelectBox">
                            <form id="ShearPhotoForm" enctype="multipart/form-data" method="post" target="POSTiframe">
                                <input name="shearphoto" type="hidden" value="我要传参数" autocomplete="off">
                                <a href="javascript:;" id="selectImage">
                                    <input type="file" name="imgFile" autocomplete="off" />
                                </a>
                            </form>
                            <a href="javascript:;" id="PhotoLoading"></a>
                            <a href="javascript:;" id="camerasImage"></a>
                        </div>
                        <div id="relat">
                            <div id="black"></div>
                            <div id="movebox">
                                <div id="smallbox">
                                    <img src="/webplugins/shearphoto/shearphoto_common/images/default.gif" class="MoveImg" /><!--截框上的小图-->
                                </div>
                                <i id="borderTop"></i>
                                <i id="borderLeft"></i>
                                <i id="borderRight"></i>
                                <i id="borderBottom"></i>
                                <i id="BottomRight"></i>
                                <i id="TopRight"></i>
                                <i id="Bottomleft"></i>
                                <i id="Topleft"></i>
                                <i id="Topmiddle"></i>
                                <i id="leftmiddle"></i>
                                <i id="Rightmiddle"></i>
                                <i id="Bottommiddle"></i>
                            </div>
                            <img src="/webplugins/shearphoto/shearphoto_common/images/default.gif" class="BigImg" /><!--MAIN上的大图-->
                        </div>
                    </div>
                    <!--main范围结束-->
                    <div style="clear: both"></div>
                    <!--工具条开始-->
                    <div id="Shearbar">
                        <a id="LeftRotate" href="javascript:;">
                            <em>
                            </em>
                            向左旋转
                        </a>
                        <em class="hint L">
                        </em>
                        <div class="ZoomDist" id="ZoomDist">
                            <div id="Zoomcentre">
                            </div>
                            <div id="ZoomBar">
                            </div>
                            <span class="progress">
                            </span>
                        </div>
                        <em class="hint R">
                        </em>
                        <a id="RightRotate" href="javascript:;">
                            向右旋转
                            <em>
                            </em>
                        </a>
                        <p class="Psava">
                            <button id="againIMG" class="btn redbtn  ff-sim">重新选择</button>
                            <button id="saveShear" class="btn bluebtn  ff-sim ml20">保存头像</button>
                        </p>
                    </div>
                    <!--工具条结束-->
                </div>
                <!--primary范围结束-->
                <div style="clear: both"></div>
            </div>
            <!--shearphoto_main范围结束-->
        </div>
    </div>

    <script src="~/Content/shearphoto/layer/layer.js"></script>
    <script type="text/javascript" src="/content/shearphoto/js/ShearPhoto.js"></script><!--ShearPhoto的核心文件-->
    <script type="text/javascript" src="/content/shearphoto/js/handle2.js"></script>    <!--设置和处理对象方法的JS文件，要修改设置，请进入这个文件-->

    <script type="text/javascript">
        $(function () {
            $("#openUpload").click(function () {
                layer.open({
                    type: 1,
                    random: new Date() * 1,
                    shade: [0.8, '#393D49'],
                    shadeClose: true,
                    title: false, //不显示标题
                    content: $('.zlHimg'), //捕获的元素
                    success: function (layero, index) {
                        layer.style(index, {
                            width: "auto"
                        });
                    },
                    cancel: function (index) {
                        layer.close(index);
                        this.content.hide();
                    }
                });
            });


        });
    </script>

</body>
</html>
