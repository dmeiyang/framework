@model List<Amy.WebUI.Areas.Admin.Models.BusinessExample>
@{
    ViewBag.Title = "业务列表";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- 面包屑 start -->
<div id="title-breadcrumb-option-demo" class="page-title-breadcrumb">
    <ol class="breadcrumb page-breadcrumb pull-left">
        <li><i class="fa fa-home"></i>&nbsp;&nbsp;&nbsp;&nbsp;<a href="/admin/manager">工作台</a>&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
        <li><a href="javascript:void(0);">常见业务示例</a>&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
        <li class="active">@ViewBag.Title</li>
    </ol>
    <div class="clearfix"></div>
</div>
<!-- 面包屑 end -->
<!-- 右侧内容 start -->
<div class="page-content">
    <div class="row">
        <div class="col-lg-12 blog-page">
            <div class="panel">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-9 blog-articles">
                            @foreach (var v in Model)
                            {
                                <div class="row">
                                    <div class="col-md-4 blog-img">
                                        <img class="img-responsive" style="height:200px;" src="@v.Pictrue" />
                                    </div>
                                    <div class="col-md-8 blog-article">
                                        <h3 style="margin-bottom:20px;"><a href="javascript:void(0);" style="color:black;font-weight:500">@v.Tilte</a></h3>
                                        <p style="font-size:14px;color:#606a77;line-height:30px;">
                                            @Html.Raw(v.Description)
                                        </p>
                                        <p style="font-size:14px;color:#606a77;line-height:30px;">原文地址：<a href="http://jiagou.baijia.baidu.com/article/108134" target="_blank">http://jiagou.baijia.baidu.com/article/108134</a></p>
                                        <a href="javascript:void(0);" class="btn btn-primary">
                                            阅读详情&nbsp;<i class="fa fa-arrow-circle-right"></i>
                                        </a>
                                    </div>
                                </div>
                                <hr />
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- 右侧内容 end -->