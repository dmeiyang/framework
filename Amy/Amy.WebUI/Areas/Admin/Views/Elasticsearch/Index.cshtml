
@{
    ViewBag.Title = "Elasticsearch示例";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- 面包屑 start -->
<div id="title-breadcrumb-option-demo" class="page-title-breadcrumb">
    <ol class="breadcrumb page-breadcrumb pull-left">
        <li><i class="fa fa-home"></i>&nbsp;&nbsp;&nbsp;&nbsp;<a href="/admin/manager">工作台</a>&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
        <li><a href="javascript:void(0);">搜索引擎服务</a>&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
        <li class="active">@ViewBag.Title</li>
    </ol>
    <div class="clearfix"></div>
</div>
<!-- 面包屑 end -->

<!-- 右侧内容 start -->
<div class="page-content">
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-yellow">
                <div class="panel-heading">1、创建索引（指定分片数、副本数、映射）</div>
                <div class="panel-body pan">
                    <form id="amy-form" action="@Url.Action("CreateIndex", "Elasticsearch", new { area="Admin" })" method="post" class="horizontal-form">
                        <div class="form-body pal">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="username" class="control-label">
                                            索引名称<span class='require'>*</span>
                                        </label>
                                        <div class="input-icon right">
                                            <i class="fa fa-user"></i>
                                            <input type="text" name="index" placeholder="索引名称" class="form-control" required />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="address" class="control-label">
                                            索引类型<span class='require'>*</span>
                                        </label>
                                        <div class="input-icon right">
                                            <i class="fa fa-location-arrow"></i>
                                            <input type="text" name="type" placeholder="索引类型" class="form-control" required />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-right pll prl">
                            <a href="javascript:history.back(-1)" class="btn btn-green">返回</a>&nbsp;
                            <button class="btn btn-primary" type="submit">保存</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="panel panel-yellow">
                <div class="panel-heading">2、初始化数据</div>
                <div class="panel-body pan">
                    <form id="amy-form2" action="@Url.Action("Initdata", "Elasticsearch", new { area="Admin" })" method="post" class="horizontal-form">
                        <div class="form-body pal">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="username" class="control-label">
                                            索引名称<span class='require'>*</span>
                                        </label>
                                        <div class="input-icon right">
                                            <i class="fa fa-user"></i>
                                            <input type="text" name="index" placeholder="索引名称" class="form-control" required />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="address" class="control-label">
                                            索引类型<span class='require'>*</span>
                                        </label>
                                        <div class="input-icon right">
                                            <i class="fa fa-location-arrow"></i>
                                            <input type="text" name="type" placeholder="索引类型" class="form-control" required />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-right pll prl">
                            <a href="javascript:history.back(-1)" class="btn btn-green">返回</a>&nbsp;
                            <button class="btn btn-primary" type="submit">保存</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- 右侧内容 end -->

@section scripts{
    <script type="text/javascript">
        $('#amy-form').myValidate(function (form) {
            $(form).ajaxSubmit({
                success: function (res) {
                    if (res.Flag) {
                        amy.alert(res.Content);
                    }
                    else {
                        amy.alert(res.Content[0][1]);
                    }
                },
                error: function () {

                },
                dataType: "json"
            })
        });

        $('#amy-form2').myValidate(function (form) {
            $(form).ajaxSubmit({
                success: function (res) {
                    if (res.Flag) {
                        amy.alert(res.Content);
                    }
                    else {
                        amy.alert(res.Content[0][1]);
                    }
                },
                error: function () {

                },
                dataType: "json"
            })
        });
    </script>
}