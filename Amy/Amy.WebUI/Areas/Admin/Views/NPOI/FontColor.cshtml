@model List<NPOI.HSSF.Util.HSSFColor>
@{
    ViewBag.Title = "NpoiFontColor";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- 面包屑 start -->
<div id="title-breadcrumb-option-demo" class="page-title-breadcrumb">
    <ol class="breadcrumb page-breadcrumb pull-left">
        <li><i class="fa fa-home"></i>&nbsp;&nbsp;&nbsp;&nbsp;<a href="/admin/manager">工作台</a>&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
        <li><a href="javascript:void(0);">Office服务</a>&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
        <li class="active">@ViewBag.Title</li>
    </ol>
    <div class="clearfix"></div>
</div>
<!-- 面包屑 end -->
<!-- 页面内容 start -->
<div class="page-content">
    <div class="row">
        <div class="col-lg-12">
            <ul id="icons-tab" class="nav nav-tabs">
                <li class="active">
                    <a href="#npoifontcolor-tab" data-toggle="tab">Npoi Font Color</a>
                </li>

            </ul>
            <div id="icons-tab-content" class="tab-content">
                <div id="npoifontcolor-tab" class="tab-pane fade in active">
                    <div class="row row-icons">
                        @foreach (var v in Model)
                        {
                            var triplet = v.GetTriplet();

                            var color = string.Empty;

                            for (int n = 0; n < triplet.Length; n++)
                            {
                                color += triplet[n].ToString("X2");
                            }

                            <div class="col-md-3 col-sm-4">
                                <a href="javascript:void(0);" style="color:#@(color)"><i class="fa fa-try"></i>人生若只如初见</a>（@v.GetIndex()）
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- 页面内容 end -->
